{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": ["./src/"],
	"compilerOptions": {
		"jsx": "react",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmitOnError": true,
		"outDir": "./lib/",
		"removeComments": true,
		"resolveJsonModule": true,
		"target": "ES2022",
		"verbatimModuleSyntax": true
	}
}
