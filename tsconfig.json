{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"include": ["./src/"],
	"compilerOptions": {
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"outDir": "./lib/",
		"removeComments": true,
		"resolveJsonModule": true,
		"target": "es2022",
		"verbatimModuleSyntax": true
	}
}
