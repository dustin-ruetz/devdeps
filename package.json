{
	"name": "dr-devdeps",
	"version": "0.16.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"prebuild": "npm run clean",
		"build:cjs": "tsc --project ./tsconfig.cjs.json",
		"build:esm": "tsc --project ./tsconfig.esm.json",
		"build": "npm run build:cjs & npm run build:esm",
		"postbuild": "node ./scripts/postbuild.js",
		"check": "npm run check:format && npm run check:js-ts && npm run test:coverage && npm run check:types",
		"check:format": "npm run format -- --check ./",
		"check:js-ts": "npm run lint -- ./",
		"check:types": "tsc --noEmit",
		"clean": "node ./scripts/clean.js",
		"fix": "npm run fix:format && npm run fix:js-ts",
		"fix:format": "npm run format -- --write ./",
		"fix:js-ts": "npm run lint -- --fix ./",
		"format": "prettier --config ./lib/prettier.config.js --ignore-path ./.gitignore",
		"// githooks": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks:commit-msg": "commitlint --config ./lib/commitlint.config.js --edit",
		"githooks:pre-commit": "npm run build && lint-staged --config ./lib/lint-staged.config.js --relative",
		"githooks:pre-push": "npm run build && npm run check",
		"// init": "Initialize package by: 1) configuring Git hooks, 2) installing dependencies (which then runs 'postinstall' to build lib/), and 3) running validation checks.",
		"init": "git config core.hooksPath ./.githooks/ && npm install && npm run check",
		"lint": "eslint --config ./package.json --ignore-path ./.gitignore",
		"// postinstall": "After package and all dependencies are installed, build to the lib/ directory.",
		"postinstall": "npm run build",
		"test": "jest --config ./lib/jest.config.js",
		"test:coverage": "npm run test -- --coverage",
		"test:watch": "npm run test -- --watch",
		"vitest": "vitest --config ./lib/vitest.config.js",
		"vitest:test": "npm run vitest -- run",
		"vitest:coverage": "npm run vitest:test -- --coverage.enabled",
		"vitest:watch": "npm run vitest -- watch"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"repository": "https://github.com/dustin-ruetz/dr-devdeps.git",
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.3.0",
		"@commitlint/config-conventional": "19.2.2",
		"@prettier/plugin-pug": "3.0.0",
		"@prettier/plugin-xml": "3.4.1",
		"@swc/core": "1.4.17",
		"@swc/jest": "0.2.36",
		"@tsconfig/strictest": "2.0.5",
		"@types/eslint": "8.56.10",
		"@types/jest": "29.5.12",
		"@types/lint-staged": "13.3.0",
		"@typescript-eslint/eslint-plugin": "7.7.1",
		"@typescript-eslint/parser": "7.7.1",
		"eslint": "8.57.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"typescript": "5.4.5"
	},
	"devDependencies": {
		"husky": "9.0.11"
	},
	"// config": "Configuration for ESLint.",
	"eslintConfig": {
		"extends": "./lib/eslint.config.cjs"
	}
}
