{
	"name": "@dustin-ruetz/devdeps",
	"version": "1.17.2",
	"description": "Package that provides development dependencies and standardized configurations for other JavaScript/TypeScript projects (both web and Node.js) to consume.",
	"main": "./lib/exports.js",
	"scripts": {
		"prebuild": "npm run clean/lib",
		"build": "tsc --project ./tsconfig.build.json",
		"check": "npm-run-all2 --parallel check/*",
		"check/format": "npm run format -- --check ./",
		"check/lint/js-ts": "npm run lint/js-ts -- ./",
		"check/types": "tsc --noEmit",
		"clean": "npm-run-all2 --parallel clean/*",
		"clean/caches": "npx jest --clearCache && rimraf ./.caches/",
		"clean/deps": "rimraf ./node_modules/ ./package-lock.json",
		"clean/lib": "rimraf ./lib/",
		"dev": "npm run build -- --watch",
		"dev/link": "npm link",
		"dev/unlink": "npm unlink devdeps",
		"fix": "npm-run-all2 --parallel fix/*",
		"fix/format": "npm run format -- --write ./",
		"fix/lint/js-ts": "npm run lint/js-ts -- --fix ./",
		"format": "node ./lib/ format",
		"// githooks/*": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks/commit-msg": "node ./lib/ githooks/commit-msg",
		"githooks/pre-commit": "npm run build && node ./lib/ githooks/pre-commit",
		"githooks/pre-push": "npm run validate",
		"// github/*": "Use the `act` tool to test GitHub Actions workflows locally.",
		"github/release": "act --input DRY_RUN=true --secret OP_SERVICE_ACCOUNT_TOKEN --workflows ./.github/workflows/release.yaml",
		"github/validate": "act --workflows ./.github/workflows/validate.yaml",
		"init": "git config core.hooksPath ./.githooks/_/ && npm install && npm run validate",
		"init-repo": "rimraf ./.init-repo-script-test-output/ && mkdir ./.init-repo-script-test-output/ && node ./lib/ init-repo",
		"lint/js-ts": "node ./lib/ lint/js-ts",
		"prepublishOnly": "npm run build",
		"test/unit": "node ./lib/ test/unit",
		"test/unit/coverage": "npm run test/unit -- --coverage",
		"test/unit/coverage-watchAll": "npm run test/unit -- --coverage --watchAll",
		"test/unit/watch": "npm run test/unit -- --watch --coverage --collectCoverageFrom=",
		"validate": "npm-run-all2 --sequential build check test/unit/coverage"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"bin": "./lib/index.js",
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"files": [
		".githooks/",
		".node-version",
		"lib/",
		"tsconfig.build.json",
		"tsconfig.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"url": "git+ssh://git@github.com/dustin-ruetz/devdeps.git"
	},
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.5.0",
		"@commitlint/config-conventional": "19.5.0",
		"@eslint/compat": "1.2.2",
		"@eslint/js": "9.13.0",
		"@prettier/plugin-pug": "3.2.0",
		"@prettier/plugin-xml": "3.4.1",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@swc/core": "1.7.40",
		"@swc/jest": "0.2.37",
		"@tsconfig/strictest": "2.0.5",
		"@types/jest": "29.5.14",
		"@types/lint-staged": "13.3.0",
		"@types/node": "22.8.4",
		"conventional-changelog-conventionalcommits": "8.0.0",
		"eslint": "9.13.0",
		"eslint-plugin-jest": "28.8.3",
		"eslint-plugin-jsdoc": "50.4.3",
		"globals": "15.11.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.10",
		"npm-run-all2": "7.0.1",
		"postcss-scss": "4.0.9",
		"postcss-styled-syntax": "0.6.4",
		"prettier": "3.3.3",
		"rimraf": "6.0.1",
		"semantic-release": "24.2.0",
		"stylelint": "16.10.0",
		"stylelint-config-standard-scss": "13.1.0",
		"typescript": "5.6.3",
		"typescript-eslint": "8.12.2"
	},
	"devDependencies": {
		"husky": "9.1.6"
	}
}
