{
	"name": "dr-devdeps",
	"version": "0.13.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"// build": "Scripts for building/compiling the package.",
		"prebuild": "node ./scripts/prebuild.js",
		"build:cjs": "tsc --project ./tsconfig.cjs.json",
		"build:esm": "tsc --project ./tsconfig.esm.json",
		"build": "npm run build:cjs & npm run build:esm",
		"postbuild": "node ./scripts/postbuild.js",
		"// format": "Scripts for auto-formatting the codebase.",
		"format": "prettier --config ./package.json --ignore-path ./.prettierignore",
		"format:check": "npm run format -- --check ./",
		"format:write": "npm run format -- --write ./",
		"// githooks": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks:commit-msg": "commitlint --config ./lib/commitlint.config.js --edit --verbose",
		"githooks:pre-commit": "npm run build && lint-staged --config ./lib/lint-staged.config.js --relative --verbose",
		"githooks:pre-push": "npm run build && npm run validate:check",
		"// init": "Initialize package by: 1) configuring Git hooks, 2) installing dependencies (which then runs 'postinstall' to build lib/), and 3) running validation checks.",
		"init": "git config core.hooksPath ./.githooks/ && npm install && npm run validate:check",
		"// lint": "Scripts for linting the codebase.",
		"lint": "eslint --config ./package.json --ignore-path ./.eslintignore",
		"lint:check": "npm run lint -- ./",
		"lint:fix": "npm run lint -- --fix ./",
		"// postinstall": "After package and all dependencies are installed, build to the lib/ directory.",
		"postinstall": "npm run build",
		"// test": "Scripts for testing the codebase.",
		"jest": "jest --config ./lib/jest.config.js",
		"jest:clearcache": "jest --clearCache",
		"jest:coverage": "npm run jest -- --coverage",
		"jest:watch": "npm run jest -- --watch",
		"vitest": "vitest --config ./lib/vitest.config.js",
		"vitest:test": "npm run vitest -- run",
		"vitest:coverage": "npm run vitest:test -- --coverage.enabled",
		"vitest:watch": "npm run vitest -- watch",
		"typecheck": "tsc --noEmit",
		"validate": "npm run jest:coverage && npm run typecheck",
		"validate:check": "npm run format:check && npm run lint:check && npm run validate",
		"validate:fix": "npm run format:write && npm run lint:fix && npm run validate"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"repository": "https://github.com/dustin-ruetz/dr-devdeps.git",
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "18.6.0",
		"@commitlint/config-conventional": "18.6.0",
		"@swc/core": "1.4.1",
		"@swc/jest": "0.2.36",
		"@tsconfig/strictest": "2.0.3",
		"@types/eslint": "8.56.2",
		"@types/jest": "29.5.12",
		"@types/lint-staged": "13.3.0",
		"@typescript-eslint/eslint-plugin": "7.0.1",
		"@typescript-eslint/parser": "7.0.1",
		"@vitest/coverage-v8": "1.2.2",
		"eslint": "8.56.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.2",
		"prettier": "3.2.5",
		"typescript": "5.3.3",
		"vitest": "1.2.2"
	},
	"devDependencies": {
		"husky": "9.0.10"
	},
	"// config": "Configuration for ESLint and Prettier.",
	"eslintConfig": {
		"extends": "./lib/eslint.config.cjs"
	},
	"prettier": "./lib/prettier.config.js"
}
