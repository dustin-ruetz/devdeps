{
	"name": "dr-devdeps",
	"version": "0.10.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"// build": "Scripts for building/compiling the package.",
		"prebuild": "node ./scripts/prebuild.js",
		"build:cjs": "tsc --project ./tsconfig.cjs.json",
		"build:esm": "tsc --project ./tsconfig.esm.json",
		"build": "npm run build:cjs & npm run build:esm",
		"postbuild": "node ./scripts/postbuild.js",
		"// format": "Scripts for auto-formatting the codebase.",
		"format": "prettier --config ./package.json --ignore-path ./lib/.prettierignore",
		"format:check": "npm run format -- --check ./",
		"format:write": "npm run format -- --write ./",
		"// githooks": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks:commit-msg": "commitlint --config ./lib/commitlint.config.js --edit --verbose",
		"githooks:pre-commit": "npm run build && lint-staged --config ./lib/lint-staged.config.js --verbose",
		"githooks:pre-push": "npm run build && npm run validate",
		"// init": "Initialize package by 1) configuring Git hooks, 2) building to the lib/ directory, and 3) running the validation checks.",
		"init": "git config core.hooksPath ./.githooks/ && npm run build && npm run validate",
		"// lint": "Scripts for linting the codebase.",
		"lint": "eslint --config ./package.json --ignore-path ./lib/.eslintignore",
		"lint:check": "npm run lint -- ./",
		"lint:fix": "npm run lint -- --fix ./",
		"// postinstall": "After package and all dependencies are installed, build to the lib/ directory.",
		"postinstall": "npm run build",
		"// test": "Scripts for testing the codebase.",
		"test": "jest --config ./lib/jest.config.devdeps.js",
		"test:clearcache": "jest --clearCache",
		"test:coverage": "npm run test -- --coverage",
		"test:watch": "npm run test -- --watch",
		"typecheck": "tsc --noEmit",
		"validate": "npm run format:check && npm run lint:check && npm run test:coverage && npm run typecheck"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"repository": "https://github.com/dustin-ruetz/dr-devdeps.git",
	"type": "module",
	"dependencies": {
		"@babel/preset-env": "7.23.8",
		"@commitlint/cli": "18.5.0",
		"@commitlint/config-conventional": "18.5.0",
		"@tsconfig/strictest": "2.0.2",
		"@types/eslint": "8.56.2",
		"@types/jest": "29.5.11",
		"@types/lint-staged": "13.3.0",
		"@typescript-eslint/eslint-plugin": "6.19.1",
		"@typescript-eslint/parser": "6.19.1",
		"eslint": "8.56.0",
		"jest": "29.7.0",
		"lint-staged": "15.2.0",
		"prettier": "3.2.4",
		"ts-jest": "29.1.2",
		"typescript": "5.3.3"
	},
	"devDependencies": {
		"husky": "8.0.3"
	},
	"// config": "Configuration for ESLint and Prettier.",
	"eslintConfig": {
		"extends": "./lib/eslint.config.cjs"
	},
	"prettier": "./lib/prettier.config.js"
}
