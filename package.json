{
	"name": "@dustin-ruetz/web-dev-deps",
	"version": "1.5.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"prebuild": "npm run clean",
		"build": "tsc --project ./tsconfig.build.json",
		"check": "npm-run-all2 --parallel check:*",
		"check:format": "npm run format -- --check ./",
		"check:js-ts": "npm run lint -- ./",
		"check:types": "tsc --noEmit",
		"clean": "node ./scripts/clean.js",
		"dev": "npm run build -- --watch",
		"fix": "npm-run-all2 --parallel fix:*",
		"fix:format": "npm run format -- --write ./",
		"fix:js-ts": "npm run lint -- --fix ./",
		"format": "prettier --config ./lib/prettier.config.js --ignore-path ./.gitignore",
		"// ghaw": "Use the `act` tool to test GitHub Actions workflows locally.",
		"ghaw:release": "act --input DRY_RUN=true --secret OP_SERVICE_ACCOUNT_TOKEN --workflows .github/workflows/release.yaml",
		"ghaw:validate": "act --workflows .github/workflows/validate.yaml",
		"// githooks": "Refer to the files in the ./.githooks/ folder for documentation on these commands.",
		"githooks:commit-msg": "commitlint --config ./lib/commitlint.config.js --edit",
		"githooks:pre-commit": "npm run build && lint-staged --config ./lib/lint-staged.config.js --relative",
		"githooks:pre-push": "npm run validate",
		"// init-1": "Initialize repo by: 1) configuring Git hooks, 2) installing dependencies, 3) building the package to lib/,",
		"// init-2": "4) running validation checks, and 5) running unit tests and collecting code coverage.",
		"init": "git config core.hooksPath ./.githooks/ && npm install && npm run build && npm run check && npm run test:unit:coverage",
		"lint": "eslint --config ./lib/eslint.config.cjs --ignore-path ./.gitignore",
		"prepublishOnly": "npm run build",
		"test:unit": "jest --config ./lib/jest.config.js",
		"test:unit:coverage": "npm run test:unit -- --coverage",
		"test:unit:watch": "npm run test:unit -- --watch",
		"validate": "npm run build && npm run check && npm run test:unit:coverage",
		"vitest": "vitest --config ./lib/vitest.config.js",
		"vitest:test": "npm run vitest -- run",
		"vitest:coverage": "npm run vitest:test -- --coverage.enabled",
		"vitest:watch": "npm run vitest -- watch"
	},
	"keywords": [],
	"author": "Dustin Ruetz",
	"license": "MIT",
	"engines": {
		"node": ">=18",
		"npm": ">=10"
	},
	"files": [
		".githooks/",
		"lib/",
		"tsconfig.build.json",
		"tsconfig.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"url": "git@github.com:dustin-ruetz/web-dev-deps.git"
	},
	"type": "module",
	"dependencies": {
		"@commitlint/cli": "19.3.0",
		"@commitlint/config-conventional": "19.2.2",
		"@prettier/plugin-pug": "3.0.0",
		"@prettier/plugin-xml": "3.4.1",
		"@semantic-release/changelog": "6.0.3",
		"@semantic-release/git": "10.0.1",
		"@swc/core": "1.5.7",
		"@swc/jest": "0.2.36",
		"@tsconfig/strictest": "2.0.5",
		"@types/eslint": "8.56.10",
		"@types/jest": "29.5.12",
		"@types/lint-staged": "13.3.0",
		"@types/node": "20.12.13",
		"@typescript-eslint/eslint-plugin": "7.11.0",
		"@typescript-eslint/parser": "7.11.0",
		"eslint": "8.57.0",
		"jest": "29.7.0",
		"jest-environment-jsdom": "29.7.0",
		"lint-staged": "15.2.5",
		"npm-run-all2": "6.2.0",
		"prettier": "3.2.5",
		"semantic-release": "23.1.1",
		"typescript": "5.4.5"
	},
	"devDependencies": {
		"husky": "9.0.11"
	}
}
